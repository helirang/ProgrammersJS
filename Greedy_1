#include <string>
#include <vector>
#include <algorithm>

using namespace std;

int solution(int n, vector<int> lost, vector<int> reserve) {
    int answer = 0;
    int LargeVecSize;
    vector<int> CheckVector;
    
    CheckVector.assign(n,1);
    answer = n - lost.size();
    
    sort(lost.begin(),lost.end());
    sort(reserve.begin(),reserve.end());
   
    LargeVecSize = lost.size() > reserve.size() ? lost.size() : reserve.size();
    
    // 값 셋팅 [ 기본 값 1, 잃어버린 학생 -1, 가져온 학생 + 1]
    // 가져왔지만 잃어버린 학생은 +-되어 1 유지
    for(int j=0; j < LargeVecSize; j++)
    {
        if(j < lost.size())
        {
            answer += CheckVector[lost[j]-1] == 2 ? 1 : 0;
            CheckVector[lost[j]-1] -= 1; 
        }
        
        if(j < reserve.size())
        {   
            answer += CheckVector[reserve[j]-1] == 0 ? 1 : 0;
            CheckVector[reserve[j]-1] += 1; 
        }
    }
    
    //체육복이 2개 이상인 학생만, 체육복 대여
    for(int i=0; i < reserve.size(); i++)
    {
       if(CheckVector[reserve[i]-1] == 2)
       {
           if(reserve[i]-2 >= 0 && CheckVector[reserve[i]-2]==0)
            {
                answer += 1;
            }
            else if(reserve[i] < n && CheckVector[reserve[i]]==0)
            {  
                answer += 1;
                CheckVector[reserve[i]]=1;
            } 
       }
    }
    
    return answer;
}
